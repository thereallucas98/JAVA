		// QUESTÃO 2 - FAZER UM PROGRAMA PARA LER UM NÚMERO INTEIRO E DIZER SE ESTE NÚMERO É PAR OU IMPAR
		int n, res;
		string ns;
		
		ns = JOptionPane.showInputDialog("Informe um número inteiro qualquer: ");
		n = Integer.parseInt(ns);
		
