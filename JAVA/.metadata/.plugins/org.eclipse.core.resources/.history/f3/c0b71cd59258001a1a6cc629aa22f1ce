import javax.swing.JOptionPane;

public class Main {

	public static void main(String[] args) {
		// QUESTÃO 1 - FAZER UM PROGRAMA PARA LER UM NÚMERO INTEIRO, E DEPOIS DIZER SE ESTE NÚMERO É NEGATIVO OU NÃO.
		int x = 0;
		String xs;
		xs = JOptionPane.showInputDialog("Digite o valor de x: ");
		x = Int.parseInt(xs);
		if (x > 0) {
			JOptionPane.showMessageDialog("Número maior que zero, logo é positivo.");
		} else {
			JOptionPane.showMessageDialog("Número é menor que zero, logo é negativo.");
		}

	}

}
